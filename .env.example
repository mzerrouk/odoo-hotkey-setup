# Odoo Server Configuration Template
# Copy this file to .env and update the paths for your system

# Python executable path
PYTHON_PATH=C:\Path\To\Your\python.exe

# Odoo server directory
ODOO_SERVER_PATH=C:\Path\To\Your\odoo\server

# Odoo binary path (usually odoo-bin in server directory)
ODOO_BIN=C:\Path\To\Your\odoo\server\odoo-bin

# Odoo configuration file
ODOO_CONF=C:\Path\To\Your\odoo\server\odoo.conf

# Odoo log file
ODOO_LOG=C:\Path\To\Your\odoo\server\odoo.log

# Module to auto-update on restart
MODULE_TO_UPDATE=your_module_name

# Development mode flags
DEV_MODE=--dev=all
